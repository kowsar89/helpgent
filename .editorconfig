# Ref: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[*.php]
indent_size = 4
tab_width = 4
indent_style = tab

[src/**.js]
indent_size = 4
tab_width = 4
indent_style = tab

[src/**.css]
indent_size = 4
tab_width = 4
indent_style = tab